<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>
  <p>
    <strong>Body:</strong>
    <%= post.body %>
  </p>
  <strong>Tags:</strong>
  <% post.tags.each do |tag| %>
    <%= link_to tag.name.capitalize, tag , class: "btn btn-primary" %>
  <% end %>
</div>
